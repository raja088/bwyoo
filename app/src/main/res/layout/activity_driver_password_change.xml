<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".AdminPasswordChange">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        app:elevation="5dp"
        android:id="@+id/pwchange_appbar"/>

    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwchange_appbar"
        android:text="Change Password"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:id="@+id/pwchangetv"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@id/pwchangetv"
        android:hint="Enter Email to set Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/confirm_newpw"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/updatepw"
        android:textColor="#ffffff"
        android:background="@drawable/loginbuttonstyle"
        android:layout_below="@id/confirm_newpw"
        android:layout_margin="30dp"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:text="Update"
        android:padding="5dp"/>
</RelativeLayout>