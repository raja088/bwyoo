<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical">
  <ImageView
      android:layout_centerHorizontal="true"
      android:layout_marginTop="70dp"
      android:id="@+id/logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/ic_logo"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/exitmobile"
      android:textSize="20dp"
      android:layout_below="@id/logo"
      android:textColor="@color/colorPrimaryDark"
      android:text="Enter Cuctomer's Mobile no. :"
      android:layout_centerInParent="true"
      android:layout_marginTop="60dp"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/customermobno"
        android:layout_below="@id/exitmobile"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:layout_marginTop="20dp"
        android:maxLength="13"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="phone"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbuttonstyle"
        android:text="Take out Car"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:id="@+id/exitbtn"
        android:textSize="15dp"
        android:layout_below="@id/customermobno"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"/>
</RelativeLayout>

