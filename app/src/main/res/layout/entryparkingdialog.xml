<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_logo"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Customer's Mobile #:"
            android:id="@+id/entrymobile"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/entrymobile"
            android:id="@+id/customerphoneno"
            android:singleLine="true"
            android:inputType="phone"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="80dp"
            android:maxLength="11"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entrycar"
            android:layout_below="@id/customerphoneno"
            android:text="Enter Car #:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/customercarno"
            android:singleLine="true"
            android:maxLength="8"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="5dp"
            android:layout_below="@id/entrycar"
            android:layout_marginLeft="80dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/customercarno"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/entrycancelbtn"
                android:background="@drawable/ic_outline_cancel_24"
                android:layout_marginLeft="90dp" />
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/entryconfirmbtn"
                android:background="@drawable/ic_outline_check_circle_outline_24"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>